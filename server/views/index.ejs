<%- include('templates/header'); -%>

    <!--Main Content Container-->
    <div class="container">
        <div class="col-sm-12">
            <article class="text-center main-content">
                <h1 class="main-content-title display-4">Complete Exceptional Assessments <strong>Faster</strong> With Our Network of Notes</h1>
                <p>Tap into our database of university contributors and find honours-quality notes written by top achievers for <strong>YOUR</strong> university and for <strong>YOUR</strong> course, improving the speed and quality of your assessments as they arise!
                </p>
            </article>    
        </div>
    </div>

   <!--Supported Courses-->
    <div class="container">
        <div class="col-sm-6">
            <h2 class="pb-1">From Commerce to Creative Arts We Have the Notes You Need!</h2>
            <h6 class="font-italic pb-3">See our growing list of accepted courses and subjects</h6>
        </div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner row w-100 mx-auto">
                <% coursesList.forEach(function(item) { %>
                <div class="carousel-item col-md-4 active">
                    <div class="card">
                        <img class="card-img-top img-fluid" src="/images/logos/<%= item.uni_logo %>" alt="<%= item.uni_shortname %>">
                        <div class="card-body">
                            <h4 class="card-title"><%= item.uni %></h4>
                            <p class="card-text"><strong>Courses Available: </strong><%= item.coursenames %> </p>
                        </div>
                    </div>
                </div>
                <% }) %>
                <div class="carousel-item col-md-4">
                    <div class="card">
                        <img class="card-img-top img-fluid" src="/images/logos/misclogo.png" alt="misclogo">
                        <div class="card-body">
                            <h4 class="card-title">More Victorian Universities</h4>
                            <p class="card-text">Check in each week to see new Universities added to our database!</p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!--Marketing Container-->
    <div class="container pt-4 pb-4">
        <div class="row">
            <div class="col-sm-6">
                <article class="marketing">
                    <h2 class="marketing-title pb-4">Set Yourself Up For Academic Success</h2>
                    <div class="media">
                        <img class="align-self-start mr-3" src="/images/tick.png" alt="Generic placeholder image">
                        <div class="media-body pb-4">
                        <h5 class="mt-0">Exclusive Access to H1 Notes</h5>
                        <p>Once signed up to Classnotes, you can peruse, review and download any of the notes available.</p>
                        </div>
                    </div>
                    <div class="media">
                        <img class="align-self-start mr-3" src="/images/tick.png" alt="Generic placeholder image">
                        <div class="media-body pb-4">
                        <h5 class="mt-0">Customised Notes to Suit Your Needs</h5>
                        <p>Classnotes will seek to match the top downloads with your university and subject preferences based on your browsing history!</p>
                        </div>
                    </div>
                    <div class="media">
                        <img class="align-self-start mr-3" src="/images/tick.png" alt="Generic placeholder image">
                        <div class="media-body pb-4">
                        <h5 class="mt-0">Payment Protection</h5>
                        <p>Payment for subscription to Classnotes is secure and can be cancelled at any time.</p>
                        </div>
                    </div>
                    <div class="media">
                        <img class="align-self-start mr-3" src="/images/tick.png" alt="Generic placeholder image">
                        <div class="media-body pb-4">
                        <h5 class="mt-0">Available to Select Victorian Universities</h5>
                        <p>Available Campuses: The University of Melbourne, Monash University and Holmesglen Institute.</p>
                        </div>
                    </div>
                </article>    
            </div>
            <div class="col-sm-1"></div>
            <aside class="col-sm-5">
                <article class="sidebar">
                    <br>
                    <img src="/images/noteshome.png" class="checklist-img border rounded" alt="...">
                </article>
            </aside>
        </div>
    </div>

    <%- include('templates/trending'); -%>

    <!-- Sign up reminder -->
    <div class="container">
        <div class="card text-center">
            <div class="card-signup">
                <h5 class="card-title">Find The Notes You Need Today</h5>
                <p class="card-text">Become a Classnotes subscriber and gain access to hundreds of H1 notes!</p>
                <a href="#signupbutton" class="btn btn-info">Sign Up</a>
            </div>
        </div>
    </div>

<%- include('templates/footer'); -%>



