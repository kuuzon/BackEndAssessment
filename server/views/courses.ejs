    <!--Main Content Container-->
    <div class="container">
        <div class="col-sm-12">
            <article class="text-center main-content">
                <h1 class="main-content-title display-4">Available Courses to Classnotes Subscribers</h1>
            </article>    
        </div>
    </div>

    <!--Course Containers-->
    <div class="container">
        <div class="media">
            <img src="../../public/images/courses/MULogosmall.jpg" class="align-self-center mr-3" alt="...">
            <div class="media-body">
              <h5 class="mt-0">University of Melbourne</h5>
              <h6>Available Courses:</h6>
              <ul class="mb-0">
                  <li>Arts</li>
                  <li>Commerce</li>
