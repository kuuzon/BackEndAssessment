                            <a class="dropdown-item" href="#">Holmesglen</a>
                        </div>
                        </li>
                    </ul>
                    <form class="form-inline pl-4">
                        <button class="btn btn-outline-primary btn-sm" type="button" href="#signinbutton">Sign In</button>
                    </form>
                </div>
            </div>
          </nav>

        <!--Jumbotron-->
        <div id="home">
            <div class="jumbotron hidden-xs">
            </div>
        </div>
